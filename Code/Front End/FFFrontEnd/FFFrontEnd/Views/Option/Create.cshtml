@model FFFrontEnd.Models.Option

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Option</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OptionID" class="control-label"></label>
                <input asp-for="OptionID" class="form-control" />
                <span asp-validation-for="OptionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionText" class="control-label"></label>
                <input asp-for="OptionText" class="form-control" />
                <span asp-validation-for="OptionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionOrder" class="control-label"></label>
                <input asp-for="OptionOrder" class="form-control" />
                <span asp-validation-for="OptionOrder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OptionVisible" /> @Html.DisplayNameFor(model => model.OptionVisible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="QuestionID" class="control-label"></label>
                <input asp-for="QuestionID" class="form-control" />
                <span asp-validation-for="QuestionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
