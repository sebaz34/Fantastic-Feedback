@model FFFrontEnd.Models.Option

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Option</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OptionText" class="control-label">Response Option Text</label>
                <input asp-for="OptionText" class="form-control" />
                <span asp-validation-for="OptionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OptionOrder" class="control-label">Priority</label>
                <input asp-for="OptionOrder" class="form-control" />
                <span asp-validation-for="OptionOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuestionID" class="control-label">Question ID</label>
                <input asp-for="QuestionID" class="form-control" readonly />
                @if (ViewData["option.QuestionID"] != null)
                {
                    ViewData["option.QuestionID"].ToString();
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
