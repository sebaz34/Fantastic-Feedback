@model FFFrontEnd.Models.Option

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Option</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Option Text:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionText)
        </dd>
        <dt class = "col-sm-2">
            Option Priority:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionOrder)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OptionID }) |
    @Html.ActionLink("Delete", "Delete", "Option", new { id = Model.OptionID})
</div>
