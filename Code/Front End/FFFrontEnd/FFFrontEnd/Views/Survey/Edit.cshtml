@model FFFrontEnd.Models.Survey

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Survey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SurveyID" class="control-label">ID</label>
                <input asp-for="SurveyID" class="form-control" readonly />
                <span asp-validation-for="SurveyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyTitle" class="control-label">Title:</label>
                <input asp-for="SurveyTitle" class="form-control" />
                <span asp-validation-for="SurveyTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyTopic" class="control-label">Topic:</label>
                <input asp-for="SurveyTopic" class="form-control" />
                <span asp-validation-for="SurveyTopic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyCreatorName" class="control-label">Created By:</label>
                <input asp-for="SurveyCreatorName" class="form-control" readonly />
                <span asp-validation-for="SurveyCreatorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyCreated" class="control-label">Date Created (UTC):</label>
                <input asp-for="SurveyCreated" class="form-control" readonly/>
                <span asp-validation-for="SurveyCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyComments" class="control-label">Comments:</label>
                <input asp-for="SurveyComments" class="form-control" />
                <span asp-validation-for="SurveyComments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurveyImage" class="control-label">Image Link:</label>
                <input asp-for="SurveyImage" class="form-control" />
                <span asp-validation-for="SurveyImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
