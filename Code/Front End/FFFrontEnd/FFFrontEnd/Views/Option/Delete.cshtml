@model FFFrontEnd.Models.Option

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Option</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Option ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionID)
        </dd>
        <dt class = "col-sm-2">
            Option Text:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionText)
        </dd>
        <dt class = "col-sm-2">
            Option Priority:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionOrder)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
