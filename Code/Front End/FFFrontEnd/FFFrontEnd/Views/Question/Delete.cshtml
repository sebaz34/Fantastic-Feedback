@model FFFrontEnd.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Question ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionID)
        </dd>
        <dt class = "col-sm-2">
            Question Text:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionText)
        </dd>
        <dt class = "col-sm-2">
            Question Priority:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionOrder)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
</div>
